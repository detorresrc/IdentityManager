@using Microsoft.AspNetCore.Identity
@model RolesViewModel
@{
    ViewBag.Title = "Manage User Role";
}

<form method="post" asp-controller="User" asp-action="ManageRole" asp-route-userId="@Model.User.Id">
    <input asp-for="@Model.User.Id" hidden/>
    <div class="card shadow border-0 mt-2">
        <div class="card-header bg-success bg-gradient ml-0 py-1">
            <div class="row">
                <div class="col-12 text-left">
                    <h2 class="text-whte py-2">Manage User Role</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-froup">
                <label class="col-12">User Name</label>
                <div class="col-md-12">
                    <input asp-for="User.UserName" disabled="disabled" class="form-control"/>
                </div>
            </div>
            <div class="form-froup">
                <label class="col-12">User Email</label>
                <div class="col-md-12">
                    <input asp-for="User.Email" disabled="disabled" class="form-control"/>
                </div>
            </div>
            
            <div class="form-group mt-3 p-2 border rounded">
                <span>Roles Assignment</span>
                @for (var i=0;  i<Model.RolesList.Count; i++)
                {
                    <div class="m-2 form-check">
                        <input asp-for="@Model.RolesList[i].RoleName" hidden/>
                        <input asp-for="@Model.RolesList[i].IsSelected" class="form-check-input"/>
                        <label asp-for="@Model.RolesList[i].IsSelected" class="form-check-label">
                            @Model.RolesList[i].RoleName
                        </label>
                    </div>
                }
            </div>
            
            <div class="form-froup pt-3 text-left row">
                <div class="col-md-2">
                    <button class="btn btn-success form-control" type="submit">Submit</button>
                </div>
                <div class="col-md-2">
                    <a class="btn btn-secondary form-control" asp-controller="User" asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</form>