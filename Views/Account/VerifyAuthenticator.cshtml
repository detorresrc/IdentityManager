@model VerifyAuthenticatorViewModel
@{
    ViewData["Title"] = "Verify Authenticator Code";
}

<div class="row col-md-10 offset-md-1">
  <h1 class="text-primary text-center pt-2">Verify Authenticator Code</h1>
  <form method="post" asp-controller="Account" asp-action="VerifyAuthenticator">
    <input asp-for="RememberMe" type="hidden"/>
    <div class="border p-2 rounded">
      <hr/>
      <div asp-validation-summary="All" class="text-danger"></div>
      <div class="form-froup">
        <label asp-for="Code" class="col-12">Code</label>
        <div class="col-md-12">
          <input asp-for="Code" class="form-control"/>
          <span asp-validation-for="Code" class="text-danger"></span>
        </div>
      </div>
      <div class="form-froup pt-3">
        <div class="col-md-6 offset-md-3">
          <button class="btn btn-success form-control" type="submit">Submit</button>
        </div>
      </div>
    </div>
  </form>
</div>

@section Scripts {
  @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
}